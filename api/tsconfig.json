{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/apis/controllers/*": ["src/apis/controllers/*"],
      "@/apis/middlewares/*": ["src/apis/middlewares/*"],
      "@/apis/routes/*": ["src/apis/routes/*"],
      "@/apis/services/*": ["src/apis/services/*"],
      "@/apis/validations/*": ["src/apis/validations/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist", "coverage"],
  "include": [".eslintrc.js", "src/**/*", "src/server.ts", "**/*.ts"]
}
